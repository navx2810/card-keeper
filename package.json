{
  "private": true,
  "name": "mtg-keeper",
  "description": "An application for managing a MTG card collection.",
  "version": "0.0.0",
  "repository": {},
  "scripts": {
    "test": "echo lol",
    "test:unit": "vbuild -c vbuild.unit.js",
    "app": "electron app/",
    "dist": "npm run dist:mac && npm run dist:win && npm run dist:linux",
    "dist:mac": "build --mac",
    "dist:win": "build --win --ia32",
    "dist:linux": "build --linux deb tar.xz",
    "postinstall": "electron-rebuild -f && install-app-deps",
    "lint": "vbuild --eslint",
    "dev": "vbuild -d",
    "build": "vbuild",
    "cards": "node bin/database/create-cards.js"
  },
  "build": {
    "appId": "com.egoistian.devdocs-app",
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false
    }
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "electron": "^1.4.15",
    "electron-builder": "^15.0.0",
    "electron-builder-squirrel-windows": "^15.3.0",
    "electron-devtools-installer": "^2.0.0",
    "electron-rebuild": "^1.5.7",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vbuild": "^6.0.0",
    "vbuild-karma": "^1.0.0",
    "vue-class-component": "^5.0.1"
  },
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^2.3.0",
    "restify": "^4.3.0",
    "superagent": "^3.5.2"
  }
}
